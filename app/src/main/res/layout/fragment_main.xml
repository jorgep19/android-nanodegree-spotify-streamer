<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/root_view"
    tools:context=".MainActivityFragment">

    <android.support.v7.widget.SearchView
        android:id="@id/search_box"
        style="@style/Theme.AppTheme.SearchView"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_hint"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/search_results"
        android:scrollbars="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/list_vertical_margin"
        android:layout_marginBottom="@dimen/list_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@id/no_results_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@id/no_results_img"
            android:src="@drawable/music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/no_search_results" />
        <TextView
            android:id="@id/no_results_msg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>